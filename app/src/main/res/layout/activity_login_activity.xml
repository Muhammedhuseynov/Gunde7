<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="GUNDE_7"
        android:textColor="#F70000"
        android:textSize="30dp"
        app:fontFamily="sans-serif-medium" />


    <EditText
        android:id="@+id/login"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="255dp"
        android:hint=" *********"
        android:inputType="textPassword"
        android:textColor="#FF0000"
        android:textColorHighlight="#1A237E"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#311B92"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="187dp">

        <Button
            android:id="@+id/backsecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="59dp"
            android:background="@drawable/login_btn"

            android:text="@string/backpg"
            android:textColor="#ffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/add_buttom"
            android:layout_marginLeft="40dp"
            android:text="@string/nextpg"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="133dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="74dp"
        app:srcCompat="@drawable/safe" />

</RelativeLayout>